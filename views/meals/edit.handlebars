{{#each errs}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3 class="text-center my-3"> Alterando alimentos </h3>
<form action="/alimentos/editar-sucesso" method="POST">
	<input type="hidden" name="id" value="{{meal.id}}" />
	<div class="row mb-3">
		<label for="name" class="col-sm-2 col-form-label">Nome</label>
		<div class="col-sm-10">
			<input type="text" value="{{meal.name}}" name="name" class="form-control" id="name" placeholder="Ex.: banana com granola" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="info" class="col-sm-2 col-form-label">Informações</label>
		<div class="col-sm-10">
			<textarea
				name="info"
				class="form-control"
				id="info"
				placeholder="Descrições dos alimentos, calorias, tópicos, etc."
				rows="6"
				cols="30"
			>{{meal.info}}
			</textarea>
		</div>
	</div>
	<div class="row mb-3">
		<label for="amount" class="col-sm-2 col-form-label">Quantidades</label>
		<div class="col-sm-10">
			<input type="text" name="amount" value="{{meal.amount}}" class="form-control" id="amount" placeholder="Ex.: 120g, 4 colheres..." />
		</div>
	</div>

	<button type="submit" class="btn btn-primary">Alterar</button>
</form>