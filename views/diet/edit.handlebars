	<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<h3 class="text-center mb-4"> Editando uma refeição </h3>
<form action="/dieta/editar/sucesso" method="POST">
	<input type="hidden" name="id" value="{{diet.id}}" />
	<div class="row mb-3">
		<label for="name" class="col-sm-2 col-form-label">Defina um nome</label>
		<div class="col-sm-10">
			<input
				type="text"
				value="{{diet.name}}"
				name="name"
				class="form-control"
				id="name"
				placeholder="Ex.: café da manhã, lanche 1, etc."
			/>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-12">
			<div class="input-group">
				<span class="input-group-text">Defina o horário: </span>
				<input type="number" value="{{diet.hour}}" name="hour" aria-label="First name" class="form-control" />
				<span class="input-group-text">:</span>
				<input type="number" value="{{diet.minutes}}" name="minutes" aria-label="Last name" class="form-control" />
			</div>
		</div>
	</div>
	<fieldset class="row mb-3">
		<legend class="col-form-label col-sm-2 pt-0">Escolha suas opções:</legend>
		<div class="col-sm-10">
			{{#each meals}}
				<div class="form-check">
					<input class="form-check-input" name="optionMeal" type="checkbox" id="flexCheckDefault" />
					<label class="form-check-label" for="flexCheckDefault" value="{{_id}}">
						{{name}}
					</label>
				</div>
			{{/each}}
		</div>
	</fieldset>
	<div class="row mb-3">
		<label for="notes" class="col-sm-2 col-form-label">Observações importantes</label>
		<div class="col-sm-10">
			<input name="notes" value="{{diet.notes}}" type="text" class="form-control" id="notes" />
		</div>
	</div>

	<button type="submit" class="btn btn-primary">Adicionar</button>
</form>